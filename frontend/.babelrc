{
	"presets":
	[
		"react",
		["es2015", { modules: false }],
		"stage-2"
	],

	"plugins":
	[
		"transform-bluebird",
		"transform-decorators-legacy",
		"transform-react-display-name"
	],

	"env":
	{
		"server":
		{
			"presets":
			[
				"react",
				"node6",
				"stage-2"
			],

			"plugins":
			[
				"transform-runtime",
				"transform-decorators-legacy",
				"transform-react-display-name"
			]
		},

		"react-intl-extract-default-messages":
		{
			"plugins":
			[
				["react-intl",
				{
					"messagesDir": "./build/messages/",
					"enforceDescriptions": true
				}]
			]
		}
	}
}