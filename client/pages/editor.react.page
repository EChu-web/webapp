require './editor.less' 

React = require 'react'

Editor = React.createClass
	render: ->
		(
			<div contentEditable="true" style={style.editor}>Editor (на хоткеях + кнопки инструментов для мобильных устройств, или что-то получше)</div>
		)

style = 
	editor: 
		'padding'      : '0.4em'

		'border-color' : 'black'
		'border-style' : 'solid'
		'border-size'  : '1px'

		'outline'      : 'none'

module.exports = Editor