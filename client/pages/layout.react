import React from 'react'

// использование: @Radium перед классом компонента
// Radium = require 'radium'

import { Link, RouteHandler } from 'react-router'

import styles from './layout.less'

export default class Layout extends React.Component
{
	render()
	{
		const markup = 
		(
			<div>
				<header>
					<ul style={style.menu}>
						<li style={style.menu_item}><Link to="editor" style={style.menu_item_link} activeStyle={merge(style.menu_item_link, style.menu_item_link.current)}>{'Editor'}</Link></li>
						<li style={style.menu_item}><Link to="about" style={style.menu_item_link} activeStyle={merge(style.menu_item_link, style.menu_item_link.current)}>{'About'}</Link></li>
						<li style={style.menu_item}><Link to="showcase" style={style.menu_item_link} activeStyle={merge(style.menu_item_link, style.menu_item_link.current)}>{'Showcase'}</Link></li>
					</ul>
				</header>

				<RouteHandler/>
			</div>
		)

		return markup
	}
}

