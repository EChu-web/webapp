const style = 
{
	menu:
	{
		'list-style-type' : 'none'
	},

	menu_item: {},

	menu_item_link:
	{
		'display'         : 'inline-block',
		'text-decoration' : 'none',
		'color'           : '#000000',

		'padding-left'    : '0.4em',
		'padding-right'   : '0.4em',
		'padding-top'     : '0.2em',
		'padding-bottom'  : '0.2em',

		current:
		{
			'color'            : '#ffffff',
			'background-color' : '#000000'
		}
	}
}